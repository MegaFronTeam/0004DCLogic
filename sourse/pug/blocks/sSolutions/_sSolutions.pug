mixin solution-footer()
	h4 Отрасли
	+b.industries-slider.swiper
		.swiper-wrapper
			mixin item(img,title)
				+e.item.swiper-slide
					+e.item-img
						img(src=`img/svg/industries-slider-${img}.svg`, alt="")
					+e.item-title!=title
			+item(`1`,`Промышленность`)
			+item(`2`,`Торговые сети<br>(retail)`)
			+item(`3`,`Государственные структры`)
			+item(`4`,`Логистика`)
			+item(`5`,`Банки, Финансовые организации и Страхование`)
			+item(`6`,`Строительство и девелоперы`)
			+item(`7`,`Образование,<br>НИИ`)
		.swiper-pagination

