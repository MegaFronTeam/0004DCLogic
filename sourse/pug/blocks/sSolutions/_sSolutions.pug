mixin sSolutions(data)
	// start sSolutions
	+b.SECTION.sSolutions.section#sSolutions&attributes(attributes)
		.container-xl
			h1 Решения
			+tabs-wrap(solutionTabs)
			+computing-inf
			+digital
			+info-security
			+import-sub
			+advanced-dir
			+services
			+industrial
