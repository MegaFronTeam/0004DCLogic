mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")

mixin links-wrap(items)
	+b.links-wrap
		.swiper.links-wrap-slider
			.swiper-wrapper
				each item in items
					if (item.active==1)
						+e.btn.swiper-slide.active(href="#")=item.title
					else
						+e.btn.swiper-slide(href="#")=item.title

mixin tabs-wrap(items)
	+b.tabs-wrap
		.swiper.tabs-wrap-slider
			.swiper-wrapper
				each item,index in items
					if (index==0)
						+e.btn.swiper-slide.scroll-link.active(href=`#${item.id}`)=item.caption
							img(src=`img/svg/${item.img}.svg`, alt="")
					else
						+e.btn.swiper-slide.scroll-link(href=`#${item.id}`)=item.caption
							img(src=`img/svg/${item.img}.svg`, alt="")

mixin badge(title,color)
	+b.badge(class=(color ? `--${color}` : ``))!=title

mixin info-news-item(swiper)
	+b.info-news-item(class=(swiper ? `swiper-slide` : ``) href="#")
		+pic(`info-news-item.jpg`,``,0)
		+e.body
			+e.title Совершенствуйте свой бизнес в России с новым Dell Global Partner
			+e.caption Компания DCLogic получила авторизацию в Dell Global Portal на территории России. Нас можно найти как DCLogic LLC при запросе квот и размещении заказов.
			+e.date 17 февраля 2021

mixin soc-wrap()
	+b.soc-wrap
		+e.item(href="#")
			img(src="img/svg/telegram.svg", alt="")
		+e.item(href="#")
			img(src="img/svg/youtube.svg", alt="")
		+e.item(href="#")
			img(src="img/svg/facebook.svg", alt="")
		+e.item(href="#")
			img(src="img/svg/linkedin.svg", alt="")
		+e.item(href="#")
			img(src="img/svg/instagram.svg", alt="")


