				.swiper-wrapper
					+info-news-item(`swiper`)
					+info-news-item(`swiper`)
					+info-news-item(`swiper`)
					+info-news-item(`swiper`)
					+info-news-item(`swiper`)
					+info-news-item(`swiper`)
				+e.btns
					+arrow
				.swiper-pagination