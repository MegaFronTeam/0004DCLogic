extends ../layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sForm/_sForm.pug

block variables
	- let  mainPage= null 
	- let  bg= null

block title
	- let  title= 'Модальные окна'
	title= title
block pagecontent
	//- +topLine()
	script(load="part/head.html")
	.section.container
		.row
			mixin btn(id, name)
				.col-auto.mb-2
					a.btn.btn-primary(href=`#` data-src=id data-fancybox="modal")= name
			+btn("modal-request", "Оставить заявку")
			+btn("modal-write", "Напишите нам")
			+btn("modal-call", "Обратный звонок")
			+btn("modal-vacancies", "Откликнуться")
			.col-auto.mb-2
				.wrap
					.btn.btn-primary.btn-show-popup Показать куки
					+cookies 
			.col-auto.mb-2
				.wrap
					.btn.btn-primary.btn-show-popup Показать Заявка Отправлена
					+after-search 

